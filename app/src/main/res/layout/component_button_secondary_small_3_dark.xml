<?xml version="1.0" encoding="utf-8"?>
<!--
    Button Component - Secondary Small 3 Variant (Dark Theme)
    Variants: secondary-small-3
    States: enabled, hovered, focused, pressed, disabled
    Size: Auto width x 32dp height (2rem)
    Padding: 16dp horizontal, 16dp vertical (1rem)
    
    Note: Outlined button with dark background (#333333), blue text (#2371EE - same as light), white border
    Border: 1dp solid #4DFAFAFA (rgba(255,255,255,0.3))
    For hovered: rgba(255,255,255,0.1), focused/pressed: rgba(255,255,255,0.2)
    Disabled state: Apply alpha 0.4
-->
<Button
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="32dp"
    android:minHeight="32dp"
    android:text="Button"
    android:textColor="#2371EE"
    android:background="#333333"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    android:fontFamily="@string/font_family_rookery_new"
    android:textSize="@dimen/typography_row_label_small_size"
    android:lineSpacingExtra="0sp"
    android:letterSpacing="0"
    android:gravity="center"
    android:allCaps="false"
    android:stateListAnimator="@null"
    android:elevation="0dp"
    android:outlineProvider="none"
    android:backgroundTint="#333333"
    android:textColorHint="#2371EE" />

