<?xml version="1.0" encoding="utf-8"?>
<!--
    NavItemVertical Component - Selected State (Light Theme)
    Variants: selected, unselected
    Size: Auto width x auto height
    
    Note:
    - Selected: Blue background (#2371EE), white text
    - Icon: 24dp x 24dp
    - Typography: 12sp, Rookery New
    - Vertical layout (icon above text)
-->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#2371EE"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:minWidth="52dp"
    android:minHeight="64dp">
    
    <!-- Icon -->
    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_alarm_active"
        android:tint="#FFFFFF"
        android:layout_marginBottom="4dp" />
    
    <!-- Label -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Label"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/typography_row_label_small_size"
        android:fontFamily="@string/font_family_rookery_new"
        android:lineSpacingExtra="0sp"
        android:gravity="center" />
</LinearLayout>

