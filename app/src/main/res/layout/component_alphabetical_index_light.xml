<?xml version="1.0" encoding="utf-8"?>
<!--
    AlphabeticalIndex Component (Light Theme)
    Size: Auto width x auto height (vertical layout)
    
    Note:
    - Vertical list of letters A-Z, plus star (#) at top/bottom
    - Each item: 14dp x 14dp (0.875rem)
    - Selected: Blue background (#2371EE), white text
    - Unselected: Transparent background, gray text (#666666)
    - Typography: 10sp, Rookery New, weight 500
-->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="4dp">
    
    <!-- Star icon (at top) -->
    <Button
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:minWidth="14dp"
        android:minHeight="14dp"
        android:background="@drawable/shape_circle"
        android:backgroundTint="@android:color/transparent"
        android:contentDescription="Favorites"
        android:padding="0dp"
        android:elevation="0dp">
        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@drawable/ic_star"
            android:tint="#666666"
            android:layout_gravity="center" />
    </Button>
    
    <!-- Letters A-Z (example: A, B, C shown) -->
    <Button
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:minWidth="14dp"
        android:minHeight="14dp"
        android:text="A"
        android:textColor="#666666"
        android:textSize="10sp"
        android:fontFamily="@string/font_family_rookery_new"
        android:background="@drawable/shape_circle"
        android:backgroundTint="@android:color/transparent"
        android:padding="0dp"
        android:gravity="center"
        android:allCaps="false"
        android:elevation="0dp" />
    
    <!-- Hash symbol (at bottom) -->
    <Button
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:minWidth="14dp"
        android:minHeight="14dp"
        android:text="#"
        android:textColor="#666666"
        android:textSize="10sp"
        android:fontFamily="@string/font_family_rookery_new"
        android:background="@drawable/shape_circle"
        android:backgroundTint="@android:color/transparent"
        android:padding="0dp"
        android:gravity="center"
        android:allCaps="false"
        android:elevation="0dp"
        android:contentDescription="Numbers and special characters" />
</LinearLayout>

