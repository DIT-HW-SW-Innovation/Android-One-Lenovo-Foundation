<?xml version="1.0" encoding="utf-8"?>
<!--
    Checkbox Component (Dark Theme)
    States: enabled, hovered, focused, pressed, disabled
    Size: 48dp x 48dp container, 24px checkbox
    
    Note: Same as light theme, colors may vary slightly
    - Unselected: Transparent fill, #888888 border
    - Selected: #008758 fill, transparent border, white checkmark
    - Background ellipse uses rgba(255,255,255,0.1) for dark theme
    - Disabled: 40% opacity
-->
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="48dp"
    android:layout_height="48dp"
    android:gravity="center">
    
    <!-- Background ellipse (40dp) - shown on hovered/focused/pressed -->
    <View
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/shape_circle"
        android:backgroundTint="#1AFFFFFF"
        android:visibility="gone" />
    
    <!-- Checkbox shape (20dp) with border -->
    <FrameLayout
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:gravity="center">
        
        <!-- Checkbox circle background/border -->
        <View
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="2dp"
            android:background="@drawable/shape_checkbox_unselected" />
        
        <!-- Checkmark icon (shown when selected) -->
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_checkmark"
            android:visibility="gone" />
    </FrameLayout>
</FrameLayout>

