<?xml version="1.0" encoding="utf-8"?>
<!--
    SearchField Component (Light Theme)
    Stages: enabled, typing
    Size: Auto width x auto height
    
    Note:
    - Background: #EDEDED (inputBox)
    - Search icon on left (24dp)
    - Clear button on right (shown in typing stage)
    - Typography: 16sp, Rookery New
    - Label shown below in typing stage
-->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    
    <!-- Input Container -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#EDEDED"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:minHeight="56dp">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            
            <!-- Search Icon -->
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_search"
                android:tint="#666666"
                android:layout_marginEnd="12dp" />
            
            <!-- Text Input -->
            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Search"
                android:textColor="#191919"
                android:textColorHint="#666666"
                android:textSize="16sp"
                android:fontFamily="@string/font_family_rookery_new"
                android:background="@android:color/transparent"
                android:padding="0dp"
                android:minHeight="32dp" />
        </LinearLayout>
        
        <!-- Clear Button (shown in typing stage) -->
        <ImageButton
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="end|center_vertical"
            android:src="@drawable/ic_clear"
            android:background="@android:color/transparent"
            android:contentDescription="Clear search"
            android:visibility="gone" />
    </FrameLayout>
    
    <!-- Label (shown in typing stage) -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Search"
        android:textColor="#333333"
        android:textSize="12sp"
        android:fontFamily="@string/font_family_rookery_new"
        android:paddingLeft="16dp"
        android:paddingTop="4dp"
        android:visibility="gone" />
</LinearLayout>

